<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/img_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/default_10dp"
        android:src="@drawable/ic_img_profile_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_title"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_marginLeft="@dimen/default_10dp"
        android:layout_marginTop="@dimen/default_5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_time"
        android:layout_marginLeft="@dimen/default_10dp"
        android:textSize="12dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/img_icon"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_toEndOf="@+id/img_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†’"
        android:id="@+id/textView3"
        android:layout_marginLeft="@dimen/default_30dp"

        android:layout_alignRight="@+id/tv_title"
        android:layout_alignEnd="@+id/tv_title"
        android:layout_alignTop="@+id/tv_time"
        android:layout_toRightOf="@+id/tv_time"
        android:layout_toEndOf="@+id/tv_time" />
</RelativeLayout>

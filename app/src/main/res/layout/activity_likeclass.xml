<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LikeClassActivity">
   <RelativeLayout
       android:id="@+id/mainpage_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorPrimary"
       >
      <ImageView
          android:id="@+id/likeclass_Left_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:padding="11dp"
          android:layout_marginRight="@dimen/default_10dp"
          android:src="@drawable/jiantou"/>

      <TextView
          android:id="@+id/mainpage_title_bar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textSize="@dimen/text_size_18"
          android:padding="@dimen/margin_10"
          android:textColor="@color/white"
          android:text="收藏课程"/>
      <ImageView
          android:id="@+id/likeclass_right_bar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:padding="11dp"
          android:layout_marginRight="@dimen/default_10dp"
          android:background="@null" />
   </RelativeLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="暂无收藏课程"
       android:textSize="@dimen/text_size_19"
       android:gravity="center"/>
</LinearLayout>

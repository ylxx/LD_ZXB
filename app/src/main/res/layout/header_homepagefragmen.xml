<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <com.ld_zxb.view.FlashView
        android:id="@+id/flashview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="@dimen/default_0dp"
            android:layout_height="@dimen/default_100dp"
            android:layout_weight="1"
            android:background="@color/title_green">
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/default_0dp"
            android:layout_height="@dimen/default_100dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary">
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/default_0dp"
            android:layout_height="@dimen/default_100dp"
            android:layout_weight="1"
            android:background="@color/blue">
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_15sp"
        android:padding="@dimen/default_5dp"
        android:text="推荐课程："
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/default_5dp"
        android:layout_marginLeft="@dimen/default_5dp"
        android:layout_marginRight="@dimen/default_5dp"
        android:layout_marginBottom="@dimen/default_5dp"
        android:background="@color/bkcolor"/>



</LinearLayout>